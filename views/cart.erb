<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <table>
      <% order.each_with_index do |food, index|%>
        <tr>
          <td>$<%= sprintf("%.02f",(food["price"] * food["qty"]))%></td>
          <td>
            <% if food["item_name"] == "custom pizza" %>
              <%= food["item_name"].capitalize%>
              <ul>
                <% food["ingreds"].each do |ingred| %>
                <li> <%=ingred%> </li>
                <% end %>
              </ul>
            <% else %>
              <%= food["item_name"].capitalize%>
            <% end %>
          </td>
          <td>Qty: <%= food["qty"] %></td>
        </tr>
      <% end %>
    </table>
    <ul>
      <li>Subtotal: $<%= sprintf("%.02f",cost["subtotal"])%></li>
      <li>Tax: $<%=sprintf("%.02f",cost["tax"])%></li>
      <li>Total: $<%=sprintf("%.02f",cost["total"])%></li>
    </ul>
    <a href="/delivery">Order For Delivery</a>
    <a href="/pickup">Order for Pickup</a>
  <a href="/menu"><button>Return to menu</button></a>
  </body>
</html>
